@page
@model HighscoreModel

<row>
    <div class="col-lg-10 col-lg-offset-1">
        <a asp-page="/Index"><img src="~/images/NN_Logo_Liten_RGB.svg" alt="novanet-logo" width="100" /></a>
        <div class="nav-links pull-right">
            <a class="nav-links current-page" asp-page="/Highscore/Highscore">Poeng</a><a class="nav-links" asp-page="/Doors/PreviousDoors">Tidligere luker</a>
        </div>
    </div>
</row>
<row>
    <div class="col-lg-10 col-lg-offset-1 text-center box-grey">
        <h1><strong>Poeng</strong></h1>       
    </div>
    <div class="col-lg-10 col-lg-offset-1">
        @if (Model.LastUpdated.HasValue)
        {
            <span class="pull-right small">Sist oppdatert: @Model.LastUpdated.Value.ToString("dd.MM.yyyy")</span>
        }
        <br /><br />

        @if (!Model.Scores.Any())
            {
            <span>Ingen poeng så langt</span>
        }
        else
        {
            <div class="col col-lg-10 col-lg-offset-1">
                <table class="table table-hover" style="font-size: 14px">
                    <thead>
                        <tr>
                            <th style="text-align:left;">#</th>
                            <th style="text-align:left;">Navn</th>
                            <th style="text-align:center;">Poeng</th>
                            <th style="text-align:center;">Bonus</th>
                            <th style="text-align:center;">Totalt</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var score in Model.Scores)
                {
                            <tr>
                                <td style="text-align:left;">@score.Rank</td>
                                <td style="text-align:left;">@score.NameOfUser</td>
                                <td style="text-align:center;">@score.Points</td>
                                <td style="text-align:center;">@score.Bonus</td>
                                <td style="text-align:center;">@score.TotalPoints</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</row>