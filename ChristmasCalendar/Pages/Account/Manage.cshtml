@page
@model ChristmasCalendar.Pages.Account.ManageModel
<row>
    <div class="col-lg-10 col-lg-offset-1 text-center box-grey">
        <h1><strong>Innstillinger</strong></h1>
    </div>
    <div class="col-lg-10 col-lg-offset-1">
        <br/>
        <p>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <input id="dailyNotification" asp-for="WantsDailyNotification"/>
                    <label style="font-weight: normal;" for="dailyNotification"><small>Jeg vil ha daglig påminnelse på e-post</small></label>
                </div>
                <br/>
                <button type="submit" class="btn btn-default">Lagre</button> <a href="/" class="nav-links" style="padding-left: 10px">Avbryt</a>
            </form>
        </p>
    </div>
</row>