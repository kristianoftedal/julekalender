@using ChristmasCalendar.Domain
@inject SignInManager<ApplicationUser> _signInManager
@inject UserManager<ApplicationUser> _userManager

@if (_signInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <small style="padding-right: 10px;">
            <a class="nav-links" asp-page="/Account/Manage">
                <span class="glyphicon glyphicon-user"></span>
                @((await _userManager.GetUserAsync(User)).Name)
            </a>
        </small>
        <button type="submit" class="btn btn-default btn-xs">Logg ut</button>
    </form>
}